#printing even number

num=int(input("enter a number"))
if num%2==0:
    print("even")
else:
    print("odd number")


#printing odd number

num=int(input("enter a number"))
if num%2!=0:
    print("odd")
else:
    print("even number")



# printing numbers from descending order
for x in range(10,0,-1):
    print(x)


#printing numbers in ascending order

for x in range(1,11):
    print(x)


# sum the values in the list

List=[1,2,3,4]
sum=0
for x in List:
    sum=sum+x
    print(sum)

# writing a program to display right angled triangle

n=int(input("enter the rows"))
for i in range(1,n+1):
    print("*",end="")

# writing a program to display right angled triangle

n=int(input("enter the rows"))
for i in range(1,n+1):
    print("*"*i)


# transfer statements

Set={1,2,3,4,5}
for x in Set:
    if 5 in Set:
        print("found")
        break
    else:
        print(Set)
        
        
Set={1,2,3,4,5}
for x in Set:
    if 5 in Set:
        print("found")
        continue
    else:
        print(Set)


# deleting the variable

x='string'
print(x)
del(x)
print(x)



























